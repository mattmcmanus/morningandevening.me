  display inline-block
  background transparent url(../images/date-icon.png) no-repeat 0 16px
  padding 4px 4px 4px 28px
  text-decoration none
  opacity .8
  font-size 36px
  color #333
  small
    position relative
    top -8px
    color #666
  &:hover
    opacity 1
    color #222
  
#calendar
  text-align center
  background #444 url(../images/calendar-bg.png) repeat
  box-shadow inset 0 0 30px 5px rgba(5,5,5,.8)
  border-top 1px solid #fffff6
  border-bottom 1px solid #fffff6
  ul
    margin 18px
    li
      display inline-block
      list-style none
      a
        display block
        padding 4px 8px
        color #fff
        opacity .65
